{
    "name": "docs-site",
    "version": "0.0.1",
    "description": "Hugo theme for technical documentation.",
    "main": "none.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bep/tech-doc-hugo.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/bep/tech-doc-hugo/issues"
    },
    "homepage": "https://github.com/bep/tech-doc-hugo#readme",
    "dependencies": {
        "semantic-release": "15.9.12",
        "semantic-release-monorepo": "6.1.1",
        "@semantic-release/changelog": "3.0.3",
        "@semantic-release/commit-analyzer": "6.1.0",
        "@semantic-release/git": "7.0.8",
        "@semantic-release/gitlab": "3.1.7",
        "@semantic-release/release-notes-generator": "7.1.6",
        "conventional-changelog": "3.1.3"
    },
    "devDependencies": {
        "autoprefixer": "^9.4.6",
        "postcss-cli": "^5.0.1"
    },
    "release": {
        "monorepo": {
            "branch": "master",
            "analyzeCommits": {
                "format": "angular",
                "preset": "angular"
            },
            "generateNotes": {
                "preset": "angular",
                "changelogFile": "CHANGELOG.md"
            }
        },
        "branch": "master",
        "verifyConditions": [
            {
                "path": "@semantic-release/gitlab",
                "gitlabUrl": "https://gitlab.intelygenz.com",
                "gitlabApiPathPrefix": "/api/v4"
            }
        ],
        "prepare": [],
        "publish": [
            {
                "path": "@semantic-release/gitlab",
                "gitlabUrl": "https://gitlab.intelygenz.com",
                "gitlabApiPathPrefix": "/api/v4"
            }
        ],
        "success": false,
        "fail": false
    }
}
